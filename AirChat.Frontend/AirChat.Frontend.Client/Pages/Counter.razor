@page "/counter"
@using AirChat.ServiceClient.AirChat.API.Services
@rendermode InteractiveWebAssembly
@inject AirChatServiceClient client;

<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Counter New</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">This is </MudText>
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    private async void IncrementCount()
    {
        var messages = await client.GetMessagesAsync();
        currentCount++;
    }
}
