@page "/counter"
@using AirChat.API.Services
@using AirChat.Contract
@rendermode InteractiveWebAssembly
@inject AirChatServiceClient client;

<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Counter New</PageTitle>
<MudTextField @bind-Value="Name" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
<MudTextField @bind-Value="Text" Label="Outlined" Variant="Variant.Outlined"></MudTextField>

<MudText Typo="Typo.h3" GutterBottom="true">This is </MudText>
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Get Messages</MudButton>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="PostMessage">Post Message</MudButton>

@code {
    private int currentCount = 0;

    string Name;
    string Text;

    private async void PostMessage()
    {
        await client.SendMessageAsync( Name, Text);
    }

    private async void IncrementCount()
    {
        var messages = await client.GetMessagesAsync();
      
        currentCount++;
    }
}
